---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import Hr from "@/components/Hr.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";

const today = new Date();
const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const mainPost = sortedPosts[0];
const isMainToday =
  mainPost.data.pubDatetime.getFullYear() === today.getFullYear() &&
  mainPost.data.pubDatetime.getMonth() === today.getMonth() &&
  mainPost.data.pubDatetime.getDate() === today.getDate();
const recentPosts = sortedPosts.slice(1).filter(({ data }) => !data.featured);

const mainTitle = isMainToday
  ? "Today's False Facts"
  : "False Facts from the Past";
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index">
    <section id="hero" class="pb-2">
      <h1 class="mt-6 mb-4 inline-block text-4xl font-bold sm:mt-8 sm:text-5xl">
        {mainTitle}
      </h1>

      <Card datePosition="bottom" {...mainPost} />

      <!-- {
        // only display if at least one social link is enabled
        SOCIALS.length > 0 && (
          <div class="mt-4 flex flex-col sm:flex-row sm:items-center">
            <div class="me-2 mb-1 whitespace-nowrap sm:mb-0">Social Links:</div>
            <Socials />
          </div>
        )
      } -->
    </section>

    <Hr />

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-6">
          <h2 class="mb-4 text-2xl font-semibold tracking-wide">
            Latest False Facts
          </h2>
          <div class="grid grid-cols-1 gap-2 md:grid-cols-2">
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </div>
        </section>
      )
    }

    {
      sortedPosts.length > SITE.postPerIndex && (
        <div class="my-8 text-center">
          <LinkButton href="/posts/">
            All False Facts
            <IconArrowRight class="inline-block rtl:-rotate-180" />
          </LinkButton>
        </div>
      )
    }
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
